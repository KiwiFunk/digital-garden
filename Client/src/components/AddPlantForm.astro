---
//Component to hold the 'Add Plant' form
---

<form id="plant-form">
  <input type="text" id="name" placeholder="Plant Name" required />
  <input
    type="text"
    id="botanical_name"
    placeholder="Botanical name (Optional)"
  />
  <select id="watering_frequency">
    <option value="1">DEBUG(1 hour)</option>
    <option value="24">1 Day</option>
    <option value="48">2 Days</option>
    <option value="168">7 Days</option>
    <option value="336">14 Days</option>
    <option value="672">30 Days</option>
  </select>
  <textarea id="notes" placeholder="Notes (optional)" rows="3"></textarea>
  <div class="form-group">
    <label>Harvest Months</label>
    <div class="month-selector">
      {
        [
          "Jan",
          "Feb",
          "Mar",
          "Apr",
          "May",
          "Jun",
          "Jul",
          "Aug",
          "Sep",
          "Oct",
          "Nov",
          "Dec",
        ].map((month, index) => (
          <label class="month-toggle">
            <input
              type="checkbox"
              name="harvest_months"
              value={month.toUpperCase()}
              class="month-checkbox"
            />
            <span class="month-label">{month}</span>
          </label>
        ))
      }
    </div>
  </div>

  <div class="form-group">
    <label>Color</label>
    <div class="color-selector">
        {Object.entries({
            Red: "#ff4444",
            Orange: "#ffaa44",
            Yellow: "#ffdd44",
            Green: "#7f9261",
            Blue: "#44aaff",
            Purple: "#aa44ff"
        }).map(([color, hex]) => (
            <label class="color-toggle">
                <input
                    type="radio"
                    name="plant_color"
                    value={hex}
                    class="color-checkbox"
                />
                <span class="color-label" style={`background-color: ${hex}`}></span>
            </label>
        ))}
    </div>
</div>

  <button type="submit">Add Plant</button>
</form>
