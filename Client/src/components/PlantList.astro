---
// Component for displaying and containing plant data
import PlantItem from "./PlantItem.astro";              // Import PlantItem component
const { plants } = Astro.props;                         // Destructure plants prop from props object
---

<div class="plant-container">
  {plants.map((plant) => (                              // Loop through plants array
    <PlantItem plant={plant} />                         // Pass plant data to PlantItem component
  ))}
</div>
